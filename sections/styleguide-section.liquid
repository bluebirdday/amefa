{% schema %}
{
  "name": "Styleguide",
  "tag": "section",
  "class": "ecg-styleguide",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Welcome to <b>Amefa</b>",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button text"
    }
  ],
  "presets": [
    {
      "name": "Styleguide",
      "settings": {
